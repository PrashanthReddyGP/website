<script>
    function showScene(sceneId) {
        // Hide all scenes first
        const scenes = document.querySelectorAll('.scene');
        scenes.forEach(scene => {
            scene.style.display = 'none';
        });

        // Show the target scene
        const targetScene = document.getElementById(sceneId);
        if (targetScene) {
            targetScene.style.display = 'block';
            // Scroll to the top of the new scene for better visibility
             window.scrollTo({ top: targetScene.offsetTop - 80, behavior: 'smooth' });
        } else {
            console.error("Scene ID not found:", sceneId);
        }
    }

    // Initially, show only the first scene
    document.addEventListener('DOMContentLoaded', () => {
        showScene('scene1');
        // Attempt to deal with autoplay restrictions - focus the iframe perhaps?
        const iframe = document.querySelector('#music-player iframe');
        if (iframe) {
             // We can't directly trigger play due to browser restrictions,
             // but focusing might help on some browsers if user interacts shortly after.
             // Best approach is user clicking play.
        }
    });
</script>

